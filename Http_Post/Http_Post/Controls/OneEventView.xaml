<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Controls.OneEventView">
  <ContentView.Content>
      <StackLayout Style="{DynamicResource themeStack}">
            <Label Text="{Binding Title}"
                 Style="{DynamicResource themeLabel}"/>
            <Label Text="{Binding Description}"
                 Style="{DynamicResource themeLabel}"/>
            <Label Text="{Binding Address}"
                 Style="{DynamicResource themeLabel}"/>
            <Label Text="{Binding EventType.Title}"
                 Style="{DynamicResource themeLabel}"/>
            <Label Text="{Binding EventType.Description}"
                 Style="{DynamicResource themeLabel}"/>
            <Label Text="{Binding Shifts.}"
                 Style="{DynamicResource themeLabel}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>