<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Controls.EventView">

    <Grid x:Name="grid"
          Style="{DynamicResource themeStack}">
        <Grid.RowDefinitions>
            <!-- Day of week, begin time -->
            <RowDefinition Height="Auto"/>
            <!-- BoxView -->
            <RowDefinition Height="Auto"/>
            <!-- Title, Duration -->
            <RowDefinition Height="Auto"/>
            <!-- Type, Progress bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Text="{Binding DayOfWeek}" 
               Grid.Row="0" Grid.Column="0"
               Style="{DynamicResource themeLabel}"/>
        <Label Text="{Binding BeginHour}" 
               Grid.Row="0" Grid.Column="1"
               Style="{DynamicResource themeLabel}"/>
        <Label Text="{Binding EventTitle}" 
               Grid.Row="1" Grid.Column="0"
               Style="{DynamicResource themeLabel}"/>
        <Label Text="{Binding Duration}"
               Grid.Row="1" Grid.Column="1"
               Style="{DynamicResource themeLabel}"/>
        <Label Text="{Binding EventTypeTitle}" 
               Grid.Row="2" Grid.Column="0"
               Style="{DynamicResource themeLabel}"/>
        <ProgressBar Progress="{Binding ProgressToBar}"
                     Grid.Row="2" Grid.Column="1"
                     HeightRequest="5"
                     x:Name="progBar"
                     Style="{DynamicResource themeStack}"/>
        <Label Text="{Binding Ð¡ompletenessPercent}"
               Grid.Row="2" Grid.Column="1"
               Margin="10"
               x:Name="lblPercent"
               Style="{DynamicResource themeLabel}"/>
        <BoxView HeightRequest="1"
                 BackgroundColor="Silver"
                 HorizontalOptions="FillAndExpand"
                 Grid.Row="3" Grid.ColumnSpan="2"/>
    </Grid>

</ViewCell>