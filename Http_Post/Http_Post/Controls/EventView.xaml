<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Controls.EventView">
    <ContentView Padding="5">
        <Frame Padding="10">
            <Frame.OutlineColor>
                <OnPlatform x:TypeArguments="Color">
                    <On Platform="UWP" Value="#4d79ff" />
                </OnPlatform>
            </Frame.OutlineColor>
            <Grid x:Name="grid"
                  Margin="0"
                  Padding="2"
                  Style="{DynamicResource themeStack}">
                <Grid.RowDefinitions>
                    <!-- Day of week, begin time -->
                    <RowDefinition Height="*"/>
                    <!-- Title, Duration -->
                    <RowDefinition Height="*"/>
                    <!-- Type, Progress bar -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="{Binding DayOfWeek}" 
                       Grid.Row="0" Grid.Column="0"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding BeginHour}" 
                       Grid.Row="0" Grid.Column="1"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding EventTitle}" 
                       Grid.Row="1" Grid.Column="0"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding Duration}"
                       Grid.Row="1" Grid.Column="1"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding EventTypeTitle}" 
                       Grid.Row="2" Grid.Column="0"
                       VerticalOptions="Center"
                       Style="{DynamicResource themeLabel}"/>
                <ProgressBar Progress="{Binding ProgressToBar}"
                             Grid.Row="2" Grid.Column="1"
                             HeightRequest="5"
                             VerticalOptions="Center"
                             x:Name="progBar"
                             ProgressColor="#4d79ff"
                             Style="{DynamicResource themeStack}"/>
                <Label Text="{Binding Ð¡ompletenessPercent}"
                       Grid.Row="2" Grid.Column="1"
                       Margin="10"
                       x:Name="lblPercent"
                       Style="{DynamicResource themeLabel}">
                    <Label.IsVisible>
                        <OnPlatform x:TypeArguments="x:Boolean">
                            <On Platform="Android, IOS" Value="False"/>
                        </OnPlatform>
                    </Label.IsVisible>
                </Label>
            </Grid>
        </Frame>
    </ContentView>
</ViewCell>