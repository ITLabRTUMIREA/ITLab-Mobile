<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Controls.EventView">

    <StackLayout>
        <!-- Layout for Computer or Tablet -->
        <StackLayout Orientation="Vertical">
            <Label Text="{Binding Title}"/>
            <Label Text="{Binding EventType.Description}"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding BeginTime}"/>
                <Label Text="{Binding TotalDurationInMinutes}"/>
            </StackLayout>
            <Label Text="{Binding ShiftsCount}"/>
        </StackLayout>

        <!-- Layout for Phones -->
    </StackLayout>
</ViewCell>