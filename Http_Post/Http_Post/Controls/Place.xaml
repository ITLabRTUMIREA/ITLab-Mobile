<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Controls.Place">
  <ContentView.Content>
        <StackLayout x:Name="stack"
                     Style="{DynamicResource themeStack}">
            <Label x:Name="title"
                   Style="{DynamicResource themeLabel}"/>
            <Label x:Name="description"
                   Style="{DynamicResource themeLabel}"/>
            <Label x:Name="target"
                   Style="{DynamicResource themeLabel}"/>
            <Label x:Name="Participants"
                   Style="{DynamicResource themeLabel}"/>
            <StackLayout x:Name="stackPart"
                         Style="{DynamicResource themeStack}"/>
            <Label x:Name="Equipment"
                   Style="{DynamicResource themeLabel}"/>
            <StackLayout x:Name="stackEquip"
                         Style="{DynamicResource themeStack}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>