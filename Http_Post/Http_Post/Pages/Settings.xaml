<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Settings"
             xmlns:Controls="clr-namespace:Http_Post.Controls"
             Title="Settings"
             Padding="0,0,0,0"
             Icon="SettingsGear12.png">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness"
                            iOS="5,30,5,5"
                            Default="5,15,5,5"/>
            </StackLayout.Padding>    
            <Controls:Master_Btns x:Name="Btn_Profile" ImageSource="Person" Clicked="BtnProfile_Clicked"/>
            <Controls:Master_Btns x:Name="Btn_Lang" ImageSource="Language" Btn_Text="Change Language" Clicked="Lang_Clicked"/>
            <Controls:Master_Btns x:Name="Btn_Theme" ImageSource="EditPencil" Clicked="Theme_Change"/>
            <Controls:Master_Btns x:Name="Btn_LogOut" ImageSource="Exit" Clicked="LogOut_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>