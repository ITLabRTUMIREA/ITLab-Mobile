<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Settings"
             Title="Settings"
             xmlns:Controls="clr-namespace:Http_Post.Controls"
             Padding="5">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="5">
                <Controls:Master_Btns x:Name="Btn_Profile" ImageSource="Person.png" Clicked="BtnProfile_Clicked"/>

                <Controls:Master_Btns x:Name="Btn_Lang" ImageSource="Language.png" Btn_Text="Change Language" Clicked="Lang_Clicked"/>
                <Controls:Master_Btns x:Name="Btn_Theme" ImageSource="EditPencil.png" Clicked="Theme_Change"/>
                <Controls:Master_Btns x:Name="Btn_LogOut" ImageSource="Exit.png" Clicked="LogOut_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>