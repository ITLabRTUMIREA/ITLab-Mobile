<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.EquipmentPage"
             xmlns:Controls="clr-namespace:Http_Post.Controls"
             Padding="5">
    <Grid>
        <Grid.Margin>
            <OnPlatform x:TypeArguments="Thickness" 
                        iOS="5,30,0,0"
                        Default="5,10,0,0"/>
        </Grid.Margin>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnType"
                FontAttributes="None"
                Grid.Column="0"
                Grid.Row="0"
                Clicked="btnType_Clicked"/>
        <Button x:Name="btnOwner"
                FontAttributes="None"
                Grid.Column="1"
                Grid.Row="0"
                Clicked="btnOwner_Clicked"/>
        <Button x:Name="btnNumber"
                FontAttributes="None"
                Grid.Column="2"
                Grid.Row="0"
                Clicked="btnNumber_Clicked"/>
        <ListView x:Name="listView"
                  SeparatorVisibility="None"
                  IsPullToRefreshEnabled="True"
                  ItemTapped="listView_ItemTapped"
                  Grid.ColumnSpan="3" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Controls:EquipmentView/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>