<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.EquipmentPage"
             xmlns:Controls="clr-namespace:Http_Post.Controls"
             Style="{DynamicResource themeStack}">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource themeStack}">
            <Grid Style="{DynamicResource themeStack}"
                  Margin="0"
                  Padding="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="Label_Type"
                       Grid.Column="0" Grid.Row="0"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="Label_Owner"
                       Grid.Column="1" Grid.Row="0"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="Label_Number"
                       Grid.Column="2" Grid.Row="0"
                       Style="{DynamicResource themeLabel}"/>
            </Grid>
            <BoxView HeightRequest="1"
                        BackgroundColor="Silver"
                        HorizontalOptions="FillAndExpand"
                        Margin="0,0,0,10"/>
            <ListView x:Name="listView"
                      SeparatorVisibility="None"
                      IsPullToRefreshEnabled="True"
                      Style="{DynamicResource themeStack}"
                      ItemTapped="listView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Controls:EquipmentView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>