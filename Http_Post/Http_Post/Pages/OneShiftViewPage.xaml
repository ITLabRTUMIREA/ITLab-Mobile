<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.OneShiftViewPage"
             xmlns:Controls="clr-namespace:Http_Post.Controls">
    <ContentPage.Content>
        <StackLayout x:Name="stacklayout"
                     Style="{DynamicResource themeStack}">
            <Label x:Name="lblDescription"
                   Style="{DynamicResource themeLabel}"/>

            <Label x:Name="lblStart"
                   FontAttributes="Italic"
                   Style="{DynamicResource themeLabel}"/>
            <Label x:Name="lblEnd"
                   FontAttributes="Italic"
                   Style="{DynamicResource themeLabel}"/>

            <Label x:Name="lblPlaceHeader"
                   FontAttributes="Bold"
                   Margin="7"
                   Style="{DynamicResource themeLabel}"/>

            <ListView x:Name="listView"
                          Style="{DynamicResource themeStack}"
                          Margin="14"
                          ItemTapped="listView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>