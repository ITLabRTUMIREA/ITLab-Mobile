<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.TypesPage"
             xmlns:Controls="clr-namespace:Http_Post.Controls"
             Style="{DynamicResource themeStack}">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource themeStack}">
            <Grid Style="{DynamicResource themeStack}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            <Label x:Name="lblEventTypes"
                   Grid.Column="0"
                   Style="{DynamicResource themeLabel}"/>
            <Label x:Name="lblRoles"
                   Grid.Column="1"
                   Style="{DynamicResource themeLabel}"/>
            <Label x:Name="lblEquipmentTypes"
                   Grid.Column="2"
                   Style="{DynamicResource themeLabel}"/>
            </Grid>
            <BoxView HeightRequest="1"
                     BackgroundColor="Silver"
                     HorizontalOptions="FillAndExpand"
                     Margin="0,0,0,10"/>
            <ListView x:Name="listView"
                      RowHeight="100"
                      HeightRequest="100"
                      MinimumHeightRequest="10"
                      IsPullToRefreshEnabled="True"
                      ItemTapped="listView_ItemTapped"
                      Style="{DynamicResource themeStack}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Controls:TypeView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>