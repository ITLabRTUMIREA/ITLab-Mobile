<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.TypesPage"
             Style="{DynamicResource themeStack}">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource themeStack}">
            <StackLayout Orientation="Horizontal"
                         Style="{DynamicResource themeStack}">
                <Label x:Name="lblEventTypes"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="lblRoles"
                       Margin="40,0,0,0"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="lblEquipmentTypes"
                       Margin="40,0,0,0"
                       Style="{DynamicResource themeLabel}"/>
            </StackLayout>
            <BoxView HeightRequest="1"
                     BackgroundColor="Silver"
                     HorizontalOptions="FillAndExpand"
                     Margin="0,0,0,10"/>
            <ListView x:Name="listView"
                      RowHeight="100"
                      HeightRequest="100"
                      MinimumHeightRequest="10"
                      IsPullToRefreshEnabled="True"
                      ItemTapped="listView_ItemTapped"
                      Style="{DynamicResource themeStack}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Style="{DynamicResource themeStack}">
                                <Label Text="{Binding Title}"
                                       Style="{DynamicResource themeLabel}"/>
                                <Label Text="{Binding Description}"
                                       Style="{DynamicResource themeLabel}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>