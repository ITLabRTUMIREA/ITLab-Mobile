<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.TypesPage">
    <ContentPage.Content>
        <StackLayout Style="{DynamicResource themeStack}">
            <StackLayout Orientation="Horizontal"
                         Style="{DynamicResource themeStack}">
                <Label x:Name="lblEventTypes"
                       FontAttributes="Bold"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="lblRoles"
                       Margin="40,0,0,0"
                       FontAttributes="Bold"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="lblEquipmentTypes"
                       Margin="40,0,0,0"
                       FontAttributes="Bold"
                       Style="{DynamicResource themeLabel}"/>
            </StackLayout>
            <BoxView HeightRequest="1"
                     BackgroundColor="Silver"
                     HorizontalOptions="FillAndExpand"
                     Margin="0,0,0,10"/>
            <Button x:Name="btnCreate"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    Style="{DynamicResource themeButton}"/>
            <ListView x:Name="listView"
                      Style="{DynamicResource themeStack}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>