<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.EventPage"
             Title="Events"
             xmlns:Controls="clr-namespace:Http_Post.Controls"
             Style="{DynamicResource themeStack}">
        <StackLayout x:Name="stacklayout" Padding="5"
                     Style="{DynamicResource themeStack}">
            <ListView x:Name="listView"
                      IsPullToRefreshEnabled="True"
                      ItemTapped="ListView_ItemTapped"
                      SeparatorVisibility="None"
                      Style="{DynamicResource themeStack}">
            <ListView.Header>
                <StackLayout Style="{DynamicResource themeStack}">
                    <Label Text="Header Testing!"
                               FontSize="Large"
                               Style="{DynamicResource themeLabel}"/>
                    <Label Text="Header Testing!"
                               FontSize="Small"
                               Style="{DynamicResource themeLabel}"/>
                </StackLayout>
            </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Controls:EventView Custom="{Binding .}"/>
                     </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
</ContentPage>