<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Menu"
             Title="ITLab-Mobile"
             xmlns:Controls="clr-namespace:Http_Post.Controls">
    
    <MasterDetailPage.Master>
        <ContentPage Title="Master">
            <ContentPage.Content>
                <StackLayout x:Name="stacklayout_Master" Padding="5">
                    <Label x:Name="label_name" Text="..."/>
                    <Label x:Name="label_surname" Text="..."/>
                    <Controls:Master_Btns ImageSource="News.png" Btn_Text="Events" Clicked="BtnEvents_Clicked"/>
                    <Controls:Master_Btns ImageSource="Settings.png" Btn_Text="Settings" Clicked="Settings_Clicked"/>
                    <Controls:Master_Btns ImageSource="info.png" Btn_Text="About" Clicked="AboutUs"/>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage>
            <StackLayout x:Name="stacklayout_Detail">
                
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Detail>

</MasterDetailPage>