<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.CreateEquipment">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Style="{DynamicResource themeStack}"
                         Spacing="5">
                <!-- Equipment type and stack + btn to change or create type -->
                <Label x:Name="lblEquipType"
                       Style="{DynamicResource themeLabel}"/>
                <Editor x:Name="editEquipType"
                       TextChanged="editEquipType_TextChanged"
                        Unfocused="Hide"
                       Style="{DynamicResource themeLabel}"/>
                <Button x:Name="btnCreateEqType"
                        Clicked="btnCreateEqType_Clicked"
                        IsVisible="False"
                        Style="{DynamicResource themeButton}"/>
                <StackLayout x:Name="stack"
                             IsVisible="False"
                             Orientation="Vertical"
                             Margin="0,0,0,20"
                             Style="{DynamicResource themeStack}"/>
                <!-- Serial number -->
                <Label x:Name="lblSerialNumber"
                       Style="{DynamicResource themeLabel}"/>
                <Editor x:Name="editSerialNumber"
                       Margin="0,0,0,20"
                        TextChanged="DefaultTextChanged"
                       Style="{DynamicResource themeLabel}"/>
                <!-- Description -->
                <Label x:Name="lblDescription"
                       Style="{DynamicResource themeLabel}"/>
                <Editor x:Name="editDescription"
                        TextChanged="DefaultTextChanged"
                       Margin="0,0,0,20"
                       Style="{DynamicResource themeLabel}"/>
                <!-- Owner -->
                <Label x:Name="lblOwnerTitle"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="lblOwner"
                       Margin="0,0,0,20"
                       Style="{DynamicResource themeLabel}"/>
                <!-- Confirm and change owner -->
                <StackLayout Orientation="Horizontal"
                             Style="{DynamicResource themeStack}">
                    <Button x:Name="btnConfirm"
                        Clicked="btnConfirm_Clicked"
                        WidthRequest="170"
                        Style="{DynamicResource themeButton}"/>
                    <Button x:Name="btnChangeOwner"
                        Clicked="btnChangeOwner_Clicked"
                        WidthRequest="170"
                        Style="{DynamicResource themeButton}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>