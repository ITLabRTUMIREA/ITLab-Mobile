<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.CreateEquipment">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Style="{DynamicResource themeStack}"
                         Spacing="5">
                <Label x:Name="Lbl_EquipType"
                       Style="{DynamicResource themeLabel}"/>
                <Editor x:Name="Entry_EquipType"
                       TextChanged="EntryEquipType_TextChanged"
                       Style="{DynamicResource themeLabel}"/>
                <Button x:Name="Btn_CreateEqType"
                        Clicked="BtnCreateEqType_Clicked"
                        IsVisible="False"
                        Style="{DynamicResource themeButton}"/>

                <StackLayout x:Name="stackLayout"
                             IsVisible="False"
                             Orientation="Vertical"
                             Margin="0,0,0,20"
                             Style="{DynamicResource themeStack}"/>

                <Label x:Name="Lbl_SerialNumber"
                       Style="{DynamicResource themeLabel}"/>
                <Editor x:Name="Entry_SerialNumber"
                       Margin="0,0,0,20"
                       Focused="Entry_SerialNumber_Focused"
                       Style="{DynamicResource themeLabel}"/>
                <Label x:Name="Lbl_Description"
                       Style="{DynamicResource themeLabel}"/>
                <Editor x:Name="Entry_Description"
                       Margin="0,0,0,20"
                       Style="{DynamicResource themeLabel}"/>
                <Button x:Name="Btn_Confirm"
                        Clicked="BtnConfirm_Clicked"
                        WidthRequest="350"
                        HorizontalOptions="Center"
                        Style="{DynamicResource themeButton}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>