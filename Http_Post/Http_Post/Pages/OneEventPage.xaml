<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Http_Post.Pages.OneEventPage"
             xmlns:Controls="clr-namespace:Http_Post.Controls">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="stacklayout"
                Style="{DynamicResource themeStack}">
                <Label Text="{Binding Event.Title}"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding Event.Description}"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding Event.Address}"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding Event.EventType.Title}"
                       Style="{DynamicResource themeLabel}"/>
                <Label Text="{Binding Event.EventType.Description}"
                       Style="{DynamicResource themeLabel}"/>
                <ListView>

                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>